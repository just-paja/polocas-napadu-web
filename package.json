{
  "name": "polocas-napadu-root",
  "private": true,
  "engines": {
    "node": "^18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build-website": "lerna run build --scope '{polocas-napadu-core,polocas-napadu-website}' && lerna-isolate bundle polocas-napadu-website",
    "build-longforman-website": "lerna run build --scope '{polocas-napadu-core,longforman-website}' && lerna-isolate bundle longforman-website",
    "build": "npm run build:transpile && npm run build:isolate && npm run build:interactive",
    "build:core": "lerna run build --stream --scope polocas-napadu-core",
    "build:transpile": "lerna run build --stream --parallel",
    "build:isolate": "lerna-isolate bundle -e",
    "build:interactive": "node scripts/bundle-interactive.js",
    "dev": "lerna run dev --stream --parallel",
    "inspirations": "lerna run --no-prefix --stream dev --scope polocas-napadu-inspirations",
    "match:referee": "lerna run --no-prefix --stream dev --scope polocas-napadu-match-referee",
    "match:scoreboard": "lerna run --no-prefix --stream dev --scope polocas-napadu-match-scoreboard",
    "test": "jest",
    "website": "lerna run --no-prefix --stream dev --scope polocas-napadu-website"
  },
  "devDependencies": {
    "@babel/plugin-proposal-export-default-from": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@optimics/eslint-config": "^0.5.4",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.8",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "graphql": "^16.6.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.2.1",
    "jest-date-mock": "^1.0.8",
    "jest-environment-jsdom": "^29.4.3",
    "jest-runner-eslint": "^1.1.0",
    "jest-svg-transformer": "^1.0.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^2.2.0",
    "lerna": "^6.0.1",
    "lerna-jest": "^0.5.6",
    "mini-css-extract-plugin": "^2.6.1",
    "react-animate-on-change": "^2.2.0",
    "react-router-dom": "^6.8.1",
    "react-select": "^5.6.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.55.0",
    "sass-loader": "^13.1.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.74.0",
    "webpack-dev-server": "^4.11.1"
  }
}
